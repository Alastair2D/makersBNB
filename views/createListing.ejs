  <body>
    <div id="nav">
        <a href="/logout" style="float:right; font-weight:100; font-size:14px;">Log out</a>
        <a href="/homepage" style="letter-spacing: 7px;">MAKERS</a>
        <!-- <a href="/viewRequests">View Requests</a> -->
    </div>
    <div class="main">
      <h1>Create a new listing</h1>
      <h3>Fill in the details below</h3>
      <hr size=2>
        <form action="/homepage/add" method="POST">
          <div class="form-group">
            <label>Name</label><br>
            <input type="text" class="form-control" name="name">
          </div>
          <div class="form-group">
            <label>Desciption</label>
            <textarea class="form-control" name="description"></textarea>
          </div>
          <label>Price per night</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Â£</span>
              </div>
            <input type="text" class="form-control" type="number" min="1" step="any" name="price">
          </div>
          <div class="form-group">
            <label>Image URL</label><br>
            <input type="text" class="form-control" name="imageURL">
          </div>
            <input type="submit" class="btn btn-success" value="Submit">
        </form>
    </div>
  </body>
